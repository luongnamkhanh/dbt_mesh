# Example dbt profiles for the mesh POC
# Copy this to ~/.dbt/profiles.yml and adjust as needed
#
# RECOMMENDED: Use Snowflake for database persistence
# See dbt_down/snowflake_setup/profiles.yml for full Snowflake configuration

# Snowflake profiles (recommended - persistent database)
dbt_up:
  target: prod
  outputs:
    prod:
      type: snowflake
      account: QMVBJWG-PM06063
      user: KHANHLN
      password: "{{ env_var('DBT_SNOWFLAKE_PASSWORD') }}"
      role: DBT_UP_ROLE
      warehouse: DBT_UP_WH
      database: DBT_UP_PROD
      schema: STAGING
      threads: 4

dbt_down_loom:
  target: prod
  outputs:
    prod:
      type: snowflake
      account: QMVBJWG-PM06063
      user: KHANHLN
      password: "{{ env_var('DBT_SNOWFLAKE_PASSWORD') }}"
      role: DBT_DOWN_LOOM_ROLE
      warehouse: DBT_DOWN_WH
      database: DBT_DOWN_LOOM_PROD
      schema: STAGING
      threads: 4

dbt_down:
  target: prod
  outputs:
    prod:
      type: snowflake
      account: QMVBJWG-PM06063
      user: KHANHLN
      password: "{{ env_var('DBT_SNOWFLAKE_PASSWORD') }}"
      role: DBT_DOWN_ROLE
      warehouse: DBT_DOWN_WH
      database: DBT_DOWN_PROD
      schema: STAGING
      threads: 4

